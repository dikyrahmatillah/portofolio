"use client";

import { useEffect, useRef } from "react";
import gsap from "gsap";
import { ScrollTrigger } from "gsap/ScrollTrigger";

gsap.registerPlugin(ScrollTrigger);

export default function Contact() {
  const contactRef = useRef<HTMLElement>(null);
  useEffect(() => {
    if (typeof window === "undefined") return;
    const initScrollTrigger = () => {
      ScrollTrigger.refresh();

      contactRef.current;

      const transitionTrigger = ScrollTrigger.create({
        trigger: contactRef.current,
        start: "top 40%",
        end: "center 90%",
        scrub: 1,
        markers: true,
        refreshPriority: -1, // Lower priority to run after other triggers
        onUpdate: (self) => {
          console.log("Contact ScrollTrigger progress:", self.progress);
          if (contactRef.current) {
            const bgColor = self.progress > 0.5 ? "#ffffff" : "#0a0a0a";
            contactRef.current.style.backgroundColor = bgColor;
          }
        },
      });

      console.log("Contact ScrollTrigger created:", transitionTrigger);
      return transitionTrigger;
    };

    const timer = setTimeout(() => {
      const trigger = initScrollTrigger();
      return () => {
        if (trigger) {
          console.log("Cleaning up Contact ScrollTrigger");
          trigger.kill();
        }
      };
    }, 1000);

    return () => {
      clearTimeout(timer);
    };
  }, []);

  return (
    <section
      ref={contactRef}
      className="relative h-screen w-screen flex items-center justify-center transition-colors duration-500"
      style={{ backgroundColor: "#0a0a0a" }}
    >
      <div className="contact-cta">
        <div className="contact-button">
          <div className="contact-text-small">
            <p>Ready for collaboration?</p>
          </div>
          <div className="contact-text-large">
            <h1>Hit Me Up</h1>
          </div>
          <a href="mailto:diky@email.com"></a>
        </div>
      </div>
    </section>
  );
}
